.shop{
	position: absolute;
	width: 100%;
	height: 100rpx;
	bottom: 0rpx;
	border-top-color: #eeeeee;
	border-top-style: solid;
	border-top-width: 1rpx;

}

.totalPrice{
	position: absolute;
	text-align: center;
	/*background-color: red;*/
	margin-left: 50rpx;
	margin-top: 25rpx;
	color: red;
}

.totalButton{
	border-radius: 0;
	width: 200rpx;
	height: 100rpx;
	text-align: center;
	float: right;
}

.image_frame{
    width: 100%;
    height: 100%;
}

.content{
    background-color: cyan;
    position: absolute;
    top: 150px;
    bottom: 100rpx;
    left: 0px;
    right: 0px;
}

.left{
    width: 25%;
    background-color: sandybrown;
    height: 100%;
}

.right{
    position: absolute;
    margin-left: 25%;
    background-color: chartreuse;
    width: 75%;
    top: 0%;
    height: 100%;
}

.aside{
	width:rem;
	border-right: 1px solid #ddd;
	font-size: .85rem;
	background: #f5f5f5;
	display: flex;
	flex-wrap: wrap;
}

.type-nav{
	position: relative;
	padding:.7rem .3rem;
	text-align: center;
	border-bottom: 1px solid #ddd;
	z-index: 10;
}

.type-nav.selected{
	margin-right: -1px;
	padding-left:-1px;
	color: #333;
	background-color: #fff;
	border-left: 4rpx;
	border-left-style: solid;
	border-left-color: red;
}