/*图片轮播器*/
.image_frame
{
  width: 100%;
}

/*左边菜品分类*/
.aside{
	width:5rem;
	border-right: 1px solid #ddd;
	font-size: .85rem;
	background: #f5f5f5;
	float: left;
}

.type-nav{
	position: relative;
	padding:.7rem .3rem;
	text-align: center;
	border-bottom: 1px solid #ddd;
	z-index: 10;
}

.type-nav.selected{
	margin-right: -1px;
	padding-left:-1px;
	color: #333;
	background-color: #fff;
}

.content{
	background-color: #fff;
	float: right;
	width: 73%;
}

.dish{
	margin-left: 0.01rem;
	padding: 1rem;
	border-bottom: 1px solid #ddd;
}

.dish .title{
	display: block;
	font-size: 0.8rem;
	font-weight: bolder;
	margin-bottom: 10px;
}

.dish .price{
	color: red;
	font-size: 0.8rem;
	font-weight: bolder;
	margin-top: 0.5rem;
}

.dish .add-btn{
	width: 3rem;
	float: right;
	margin-top: -5px;
	margin-right: -5px;
}

image {
	margin-right: 20px;
}

.shop{
	/*background-color:green;*/
	color:white;
	width:100%;
	height:50px;
	position:absolute;
	bottom:0px;
	left:0px;
	border-top: 1px solid #ddd;
}

.totalPrice{
	position: absolute;
	width: 70%;
	text-align: center;
	padding-top: 20px;
	color: red;
	height: 50px;
}

.totalButton{
	height: 50px; 
	width: 30%;
	float: right;
	font:25px;
	border-radius: 0px;
}